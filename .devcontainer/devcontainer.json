{
  "name": "Java & GUI Codespace Environment",
  
  "image": "mcr.microsoft.com/devcontainers/java:25", 

  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {},
    "ghcr.io/devcontainers/features/java:1": {
      "installMaven": true,
      "version": "latest"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "vscjava.vscode-java-pack"
      ]
    }
  },

  "postCreateCommand": "sudo apt-get update && sudo apt-get install -y fonts-noto-cjk",

  "forwardPorts": [6080],

  "portsAttributes": {
    "6080": {
      "label": "noVNC web client",
      "onAutoForward": "notify"
    }
  }
}
